<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<div>
  <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      <br>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <br>
      <%= f.label :password %>
      <%= f.text_field :password %>
      <br>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.text_field :password_confirmation %>
      <br>
      <%= f.submit "Create account" %>
  <% end %>
</div>
